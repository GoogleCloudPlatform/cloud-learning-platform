{ 
    "$schema":"http://json-schema.org/draft-04/schema#",
    "title":"Create Course",
    "type":"object",
    "required":[ 
        "title",
        "label"
    ],
    "properties":{ 
        "title":{ 
            "type":"string",
            "minLength":1,
            "maxLength":1000
        },
        "label":{ 
            "type":"string",
            "minLength":0,
            "maxLength":1000
        },
        "is_valid":{
            "type":"boolean"
        },
        "competency_ids":{
            "type":"array",
            "items": {
                "type":"string"
            }
        },
        "add_competencies_from_learning_content":{
            "type":"boolean"
        },
        "learning_content_ids":{
            "type":"array",
            "items": {
                "type":"string"
            }
        },
        "created_by":{ 
            "type":"string",
            "minLength":0,
            "maxLength":1000
        },
        "last_modified_by":{ 
            "type":"string",
            "minLength":0,
            "maxLength":1000
        },
        "course_category":{
            "enum": [
                "default",
                "bio"
            ]
        }
    }
}
