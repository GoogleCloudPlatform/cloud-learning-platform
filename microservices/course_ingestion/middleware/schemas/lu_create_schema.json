{ 
    "$schema":"http://json-schema.org/draft-04/schema#",
    "title":"Schema for creating Learning Unit",
    "type":"object",
    "required":[ 
        "title",
        "text"
    ],
    "properties":{ 
        "title":{ 
            "type":"string",
            "minLength":1,
            "maxLength":1000
        },
        "text":{
            "type": "array",
            "items": {
                "type": "string",
                "minLength":1
            },
            "minLength": 1
        },
        "pdf_title":{ 
            "type":"string",
            "minLength":0,
            "maxLength":1000
        },
        "is_valid":{
            "type":"boolean"
        },
        "created_by":{ 
            "type":"string",
            "minLength":0,
            "maxLength":1000
        },
        "last_modified_by":{ 
            "type":"string",
            "minLength":0,
            "maxLength":1000
        }
        
    }
}
